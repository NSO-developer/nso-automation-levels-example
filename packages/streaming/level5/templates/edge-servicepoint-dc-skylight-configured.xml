<config-template xmlns="http://tail-f.com/ns/config/1.0"
                 servicepoint="edge-servicepoint"
                 componenttype="streaming:dc"
                 state="streaming:skylight-configured">
  <?set EDGE = {./name}?>
  <?set DC = {./oper-status/chosen-dc}?>
  <?set-root-node {/}?>
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>skylight</name>
      <config>
        <sessions xmlns="urn:accedian:params:xml:ns:yang:accedian-gateway-orchestrator">
          <session>
            <sessionIdentifier>94d26a7f-a2d0-43dc-8839-39853c70f84f</sessionIdentifier>
            <orchestratorType>agent</orchestratorType>
            <sessiontype>twamp</sessiontype>
            <ifStateful>true</ifStateful>
            <agent>
              <agentId>a31e3e45-ec69-4f4a-a479-b2273f8077be</agentId>
              <agentSessionName>{$DC}-agent-to-skylight-twamp</agentSessionName>
              <enable>true</enable>
              <period>continuous</period>
            </agent>
            <twamp>
              <senderDscp>0</senderDscp>
              <reflectorAddr>{/ncs:devices/ncs:device[ncs:name=$EDGE]/ncs:address}</reflectorAddr>
              <reflectorPort>4000</reflectorPort>
              <reportInterval>31</reportInterval>
            </twamp>
          </session>
        </sessions>
      </config>
    </device>
  </devices>
</config-template>
